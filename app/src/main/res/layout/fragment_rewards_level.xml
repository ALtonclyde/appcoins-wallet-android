<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageView
      android:id="@+id/level_img"
      android:layout_width="wrap_content"
      android:layout_height="137dp"
      android:src="@drawable/level_comet"
      app:layout_constraintBottom_toTopOf="@+id/level_title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      android:visibility="invisible"
      />

  <TextView
      android:id="@+id/level_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      android:fontFamily="sans-serif-medium"
      android:text="Congrats, you are a Moon!"
      android:textColor="#001727"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@id/level_description"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/level_img"
      app:layout_constraintVertical_chainStyle="packed"
      android:visibility="invisible"
      />
  <TextView
      android:id="@+id/level_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:fontFamily="sans-serif"
      android:text="A natural Satellite"
      android:textColor="#828282"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@id/earned_value"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/level_title"
      app:layout_constraintVertical_chainStyle="packed"
      android:visibility="invisible"
      />

  <TextView
      android:id="@+id/earned_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:text="@string/gamification_level_earned"
      android:textColor="#828282"
      android:textSize="10dp"
      app:layout_constraintBottom_toBottomOf="@id/earned_value"
      app:layout_constraintEnd_toStartOf="@id/earned_value"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/earned_value"
      />

  <TextView
      android:id="@+id/earned_value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@drawable/earned_value_background"
      android:padding="4dp"
      android:textColor="#ffffff"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@id/level_progress_container"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@id/earned_label"
      app:layout_constraintTop_toBottomOf="@id/level_description"
      app:layout_constraintVertical_chainStyle="packed"
      />

  <include
      layout="@layout/rewards_progress_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="30dp"
      app:layout_constraintBottom_toTopOf="@+id/details_button"
      app:layout_constraintTop_toBottomOf="@id/earned_value"
      app:layout_constraintVertical_chainStyle="packed"
      />

  <Button
      android:id="@+id/details_button"
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:layout_marginTop="40dp"
      android:text="how it works"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/level_progress_container"
      app:layout_constraintVertical_chainStyle="packed"
      style="@style/ButtonStyle"

      />

</android.support.constraint.ConstraintLayout>