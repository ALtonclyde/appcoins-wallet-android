<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/import_wallet_password"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:text="@string/import_wallet_password_body"
      android:textColor="@color/black_87_alpha"
      android:textSize="16sp"
      app:layout_constraintTop_toTopOf="parent"
      />

  <include
      android:id="@+id/wallet_card"
      layout="@layout/wallet_outlined_card"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/import_wallet_password"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/label_input"
      style="@style/TextInputLayoutAppearanceOutlined"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintTop_toBottomOf="@id/wallet_card"
      >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:hint="@string/prompt_password"
        android:imeOptions="actionUnspecified|flagNoFullscreen|flagNoExtractUi"
        />
  </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>