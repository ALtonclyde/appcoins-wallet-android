<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
  >
  <androidx.constraintlayout.widget.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
  <TextView
      android:id="@+id/currency_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="33dp"
      android:text="USD"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/TopUpTextStyle"
      />

  <EditText
      android:id="@+id/main_value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="20"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/currency_code"
      style="@style/TopUpTextStyle.MainValue"
      android:inputType="number"
      />

  <TextView
      android:id="@+id/main_value_currency"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:text="$"
      app:layout_constraintBottom_toBottomOf="@id/main_value"
      app:layout_constraintEnd_toStartOf="@id/main_value"
      app:layout_constraintTop_toTopOf="@id/main_value"
      style="@style/TopUpTextStyle.MainValueCurrency"
      />

  <TextView
      android:id="@+id/converted_value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="622 APPC-C"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/main_value"
      style="@style/TopUpTextStyle.ConvertedValue"
      />
  <ImageButton
      android:id="@+id/swap_value_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="40dp"
      android:layout_marginStart="40dp"
      android:background="@null"
      android:src="@drawable/ic_swap"
      app:layout_constraintBottom_toBottomOf="@id/main_value"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/main_value"
      />

  <TextView
      android:id="@+id/swap_value_lable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/topup_appc_credit_currency"
      app:layout_constraintEnd_toEndOf="@id/swap_value_button"
      app:layout_constraintStart_toStartOf="@id/swap_value_button"
      app:layout_constraintTop_toBottomOf="@id/swap_value_button"
      style="@style/TopUpTextStyle.SwapCurrency"
      />

  <View
      android:id="@+id/top_separator"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginEnd="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="11dp"
      android:background="#eaeaea"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/converted_value"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:layout_marginTop="18dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/top_separator"
      android:id="@+id/payment_method"
      android:paddingStart="25dp"
      android:paddingEnd="25dp"
      />

  <View
      android:id="@+id/bot_separator"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginEnd="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="15dp"
      android:background="#eaeaea"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/payment_method"
      />

  <ImageView
      android:id="@+id/bonus_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_img_top_up_bonus"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="36dp"
      android:layout_marginBottom="75dp"
      android:layout_marginTop="62dp"
      app:layout_constraintTop_toBottomOf="@id/bot_separator"
      app:layout_constraintBottom_toTopOf="@id/button"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/bonus_title"
      app:layout_constraintTop_toTopOf="@id/bonus_icon"
      app:layout_constraintStart_toEndOf="@id/bonus_icon"
      android:layout_marginStart="12dp"
      style="@style/TopUpTextStyle.Small.BonusTitle"
      android:text="@string/topup_bonus_title"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/bonus_text"
      app:layout_constraintBottom_toBottomOf="@id/bonus_icon"
      app:layout_constraintTop_toBottomOf="@id/bonus_title"
      app:layout_constraintStart_toEndOf="@id/bonus_icon"
      android:layout_marginStart="12dp"
      style="@style/TopUpTextStyle.Small.BonusText"
      android:text="@string/topup_bonus_text"
      />

  <Button
      android:id="@+id/button"
      android:layout_width="match_parent"
      android:layout_height="36dp"
      style="@style/ButtonStyle"
      android:text="NEXT"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="80dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
