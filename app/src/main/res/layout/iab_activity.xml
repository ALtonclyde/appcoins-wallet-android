<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen_view"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_card"
    >

  <include layout="@layout/iab_activity_loading"/>
  <include layout="@layout/iab_activity_transaction_completed"/>
  <include layout="@layout/iab_activity_error"/>
  <include
      layout="@layout/iab_activity_buy"
      />

  <include
      layout="@layout/iab_activity_raiden"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/iab_activity_buy_layout"
      />


</android.support.constraint.ConstraintLayout>

