<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="#f7f7f7"
    >
  <ImageView
      android:id="@+id/gift_icon"
      android:layout_width="54dp"
      android:layout_height="48dp"
      android:src="@drawable/ic_bonus_highlight"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/bonus_title"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/bonus_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:text="@string/gamification_purchase_header"
      app:layout_constraintBottom_toTopOf="@id/bonus_value"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/gift_icon"
      app:layout_constraintTop_toTopOf="@id/gift_icon"
      style="@style/RewardsLevelTextStyle"
      android:textSize="12sp"
      />
  <TextView
      android:id="@+id/bonus_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:text="@string/gamification_purchase_body"
      android:textColor="@color/list_group_head"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@id/gift_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@id/bonus_title"
      app:layout_constraintTop_toBottomOf="@id/bonus_title"
      />

</androidx.constraintlayout.widget.ConstraintLayout>