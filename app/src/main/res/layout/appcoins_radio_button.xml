<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <androidx.appcompat.widget.AppCompatRadioButton
      android:id="@+id/appcoins_radio_button"
      style="@style/PaymentMethodsRadioButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:enabled="false"
      app:layout_constraintBottom_toTopOf="@id/appcoins_bonus_layout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <ImageView
      android:id="@+id/icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_appc_token"
      app:layout_constraintBottom_toBottomOf="@id/appcoins_radio_button"
      app:layout_constraintStart_toEndOf="@id/appcoins_radio_button"
      app:layout_constraintTop_toTopOf="@id/appcoins_radio_button"
      />
  <TextView
      android:id="@+id/title"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="4dp"
      android:text="@string/appc_token_name"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@id/message"
      app:layout_constraintStart_toEndOf="@id/icon"
      />
  <TextView
      android:id="@+id/message"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="12dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:text="@string/purchase_appcoins_available_body"
      android:textColor="#727272"
      app:layout_constraintBottom_toTopOf="@id/appcoins_bonus_layout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/title"
      />

  <include
      android:id="@+id/appcoins_bonus_layout"
      layout="@layout/view_purchase_bonus"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginTop="12dp"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/appcoins_radio_button"
      app:layout_constraintTop_toBottomOf="@id/icon"
      tools:visibility="visible"
      />

</androidx.constraintlayout.widget.ConstraintLayout>