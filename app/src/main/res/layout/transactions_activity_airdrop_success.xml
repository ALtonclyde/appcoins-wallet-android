<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transactions_error_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
  <TextView
      android:id="@+id/activity_transactions_success_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/activity_transactions_airdrop_success_title"
      android:textColor="@color/black_87_alpha"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Base.TextAppearance.AppCompat.Subhead"
      />
  <TextView
      android:id="@+id/activity_transactions_error_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minLines="3"
      android:text="@string/activity_transactions_airdrop_success_message"
      android:textColor="@color/activity_transactions_airdrop_success_gray"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/activity_transactions_success_title"
      style="@style/Base.TextAppearance.AppCompat.Caption"
      />

  <Button
      android:id="@+id/activity_transactions_success_ok_button"
      android:layout_width="wrap_content"
      android:layout_height="36dp"
      android:layout_marginTop="4dp"
      android:text="@string/ok"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/activity_transactions_error_message"
      style="@style/buy_button"
      />

  <TextView
      android:id="@+id/activity_transactions_error_more_info_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="29dp"
      android:text="@string/activity_transactions_airdrop_more_info"
      android:textColor="#2a97e0"
      app:layout_constraintBottom_toBottomOf="@id/activity_transactions_success_ok_button"
      app:layout_constraintEnd_toStartOf="@id/activity_transactions_success_ok_button"
      app:layout_constraintTop_toTopOf="@id/activity_transactions_success_ok_button"
      />
</android.support.constraint.ConstraintLayout>

